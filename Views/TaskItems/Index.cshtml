@model IEnumerable<TaskItem>

@{
	ViewData["Title"] = "Task Items";
}

<h1>Tasks</h1>
<div class="container">
	<table class="table table-bordered">
		<thead class="table-light">
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Due Date</th>
				<th>Status</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var task in Model)
			{
				<tr>
					<td>@task.Title</td>
					<td>@task.Description</td>
					<td>@(task.DueDate != null ? ((DateTime)task.DueDate).ToString("d") : "")</td>
					<td>@(task.IsCompleted ? "Done" : "Not done")</td>
					<td><a asp-action="edit" asp-route-id="@task.Id" class="btn btn-sm">Edit</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>